{
  "name": "armips MIPS Assembly",
  "scopeName": "source.armips",
  "patterns": [
    {
      "include": "#comments"
    },
    {
      "include": "#directives"
    },
    {
      "include": "#jal_calls"
    },
    {
      "include": "#instructions"
    },
    {
      "include": "#registers"
    },
    {
      "include": "#numbers"
    },
    {
      "include": "#labels"
    },
    {
      "include": "#strings"
    }
  ],
  "repository": {
    "jal_calls": {
      "patterns": [
        {
          "match": "(?i)\\b(JAL)\\s+([a-zA-Z_][a-zA-Z0-9_]*)",
          "captures": {
            "1": {
              "name": "support.function.instruction.armips"
            },
            "2": {
              "name": "keyword.control.armips"
            }
          }
        }
      ]
    },
    "comments": {
      "patterns": [
        {
          "name": "comment.block.armips",
          "begin": "/\\*",
          "end": "\\*/"
        },
        {
          "name": "comment.line.double-slash.armips",
          "match": "//.*$"
        }
      ]
    },
    "directives": {
      "patterns": [
        {
          "name": "entity.name.type.armips",
          "match": "\\.definelabel\\b"
        },
        {
          "name": "keyword.control.directive.armips",
          "match": "\\.(org|orga|headersize|align|fill|skip|ascii|asciiz|byte|halfword|word|float|double|include|incbin|notice|warning|error|area|region|define|macro|endmacro|function|endfunction|if|elseif|else|endif|ifdef|ifndef|loadtable|table|autoregion|pool|open|close|create|createfile|output|outputsize|sym|fixloaddelay|erroronwarning|relativeinclude)\\b"
        },
        {
          "name": "entity.name.type.armips",
          "match": "\\bequ\\b"
        }
      ]
    },
    "instructions": {
      "patterns": [
        {
          "name": "support.function.instruction.armips",
          "match": "(?i)\\b(ADD|ADDI|ADDIU|ADDU|AND|ANDI|B|BEQ|BEQL|BEQZ|BEQZL|BGEZ|BGEZL|BGEZAL|BGTZ|BLEZ|BLEZL|BLTZ|BLTZL|BLTZAL|BNE|BNEL|BNEZ|BNEZL|BREAK|DIV|DIVU|J|JAL|JALR|JR|LB|LBU|LH|LHU|LI|LUI|LW|LWL|LWR|MFHI|MFLO|MTHI|MTLO|MULT|MULTU|NOR|OR|ORI|SB|SH|SLL|SLLV|SLT|SLTI|SLTIU|SLTU|SRA|SRAV|SRL|SRLV|SUB|SUBU|SW|SWL|SWR|LD|SD|LWR|SWR|SYSCALL|XOR|XORI|NOP|TLBP|TLBR|NEGU|LWC1|SWC1|MTC1|MFC1|MTC0|MFC0|MUL.S|MUL.D|DIV.S|DIV.D|ADD.S|ADD.D|SUB.S|SUB.D|CVT.S.W|CVT.D.W|CVT.W.S|CVT.D.S|CVT.S.D|CVT.W.D)\\b"
        }
      ]
    },
    "registers": {
      "patterns": [
        {
          "name": "variable.language.register.armips",
          "match": "\\b(zero|at|v[0-1]|a[0-3]|t[0-9]|s[0-8]|k[0-1]|gp|sp|fp|ra|r0|f([0-9]|[12][0-9]|3[01])|r[1-9]|r[12][0-9]|r3[01])\\b"
        },
        {
          "name": "variable.language.register.armips",
          "match": "\\$(zero|at|v[0-1]|a[0-3]|t[0-9]|s[0-8]|k[0-1]|gp|sp|fp|ra|[0-9]|[12][0-9]|3[01])\\b"
        }
      ]
    },
    "numbers": {
      "patterns": [
        {
          "name": "constant.numeric.hex.armips",
          "match": "\\b0x[0-9A-Fa-f]+\\b"
        },
        {
          "name": "constant.numeric.binary.armips",
          "match": "\\b0b[01]+\\b"
        },
        {
          "name": "constant.numeric.decimal.armips",
          "match": "\\b[0-9]+\\b"
        }
      ]
    },
    "labels": {
      "patterns": [
        {
          "name": "keyword.control.armips",
          "match": "^[a-zA-Z_][a-zA-Z0-9_]*:"
        },
        {
          "name": "keyword.control.armips",
          "match": "\\b[a-zA-Z_][a-zA-Z0-9_]*\\b"
        }
      ]
    },
    "strings": {
      "patterns": [
        {
          "name": "string.quoted.double.armips",
          "begin": "\"",
          "end": "\"",
          "patterns": [
            {
              "name": "constant.character.escape.armips",
              "match": "\\\\."
            }
          ]
        }
      ]
    }
  }
}
